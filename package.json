{
  "name": "FireLounge",
  "version": "0.1.0",
  "description": "Firebase Management System",
  "author": "Opench Incorporated",
  "build": {
    "appId": "FireLounge",
    "win": {
      "icon": "build/icon.png"
    },
    "mac": {
      "icon": "build/icon.png"
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setEnvVars.js"
    ]
  },
  "homepage": "./",
  "main": "public/electron.js",
  "private": true,
  "dependencies": {
    "@babel/polyfill": "^7.11.5",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/styles": "latest",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "cross-spawn": "^7.0.3",
    "deepmerge": "^4.2.2",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.2",
    "firebase": "^7.15.0",
    "firebase-admin": "^8.12.1",
    "firebase-tools": "^8.4.2",
    "lodash": "latest",
    "path": "^0.12.7",
    "prop-types": "latest",
    "react": "^16.13.1",
    "react-context-alerts": "^1.0.3",
    "react-dom": "^16.13.1",
    "react-json-view": "^1.19.1",
    "react-modal": "^3.11.2",
    "react-router-dom": "latest",
    "react-scripts": "^3.4.3",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "start-server": "cross-env BROWSER=none npm run react-start",
    "test": "concurrently \"npm run start-server\" \"jest\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.5",
    "electron-builder": "^22.6.0",
    "mocha": "^8.1.3",
    "puppeteer-core": "^5.2.1",
    "puppeteer-in-electron": "^3.0.3",
    "wait-on": "^5.0.0"
  }
}
